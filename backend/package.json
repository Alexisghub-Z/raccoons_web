{
  "name": "raccoons-backend",
  "version": "2.0.0",
  "description": "Backend for Raccoons Taller - Clean Architecture with PostgreSQL and SMS",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "node src/infrastructure/database/seeds/seed.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "keywords": [
    "clean-architecture",
    "hexagonal",
    "postgresql",
    "sms",
    "express",
    "prisma"
  ],
  "author": "Raccoons Taller",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.2.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "socket.io": "^4.6.0",
    "twilio": "^4.19.0",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "bull": "^4.12.0",
    "ioredis": "^5.3.2",
    "axios": "^1.6.2",
    "date-fns": "^3.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "prisma": "^6.2.0",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "@types/jest": "^29.5.11"
  }
}
